<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto text-light">
          <% if user_signed_in? %>
            <li><%= link_to "Home", user_path(current_user.id), class:"fas fa-home" %></a></li>
            <li><%= link_to "Users", "/users", class:"fas fa-users" %></a></li>
            <li><%= link_to "Books", "/books", class:"fas fa-book-open" %></a></li>
            <li><%= link_to "logout", destroy_user_session_path, class:"fas fa-sign-out-alt",method: :delete %></li>

          <% else %>
            <li><%= link_to"Home",root_path, class:"fas fa-home" %></li>
            <li><%= link_to"About",home_about_path, class:"fas fa-link" %></li>
            <li><%= link_to"Sign up", "/users/sign_up", class:"fas fa-user-plus" %></li>
            <li><%= link_to"login", "/users/sign_in", class:"fas fa-sign-in-alt" %></li>
          <% end %>
        </ul>
      </div>
    </div>
    </nav>
    </header>

    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>

  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>

</html>
