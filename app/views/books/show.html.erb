<div class="box">

<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>

   <table class="table">
    <tr>
     <th>name</th>
     <th><%= @user.name %></th>
    </tr>

    <tr>
     <th>introduction</th>
     <th><%= @user.introduction %></th>
    </tr>

   </table>

   <div class="row">
    <%= link_to"",edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>
   </div>


   <%= form_with model:@book_new, url: books_path, local: true do |f| %>


     <h2 class="mt-3">New book</h2>
      <h4>Title</h4>
      <%= f.text_field :title,class: "col-xs-12" %>
      <h4>Opinion</h4>
      <%= f.text_field :body,class: "col-xs-12" %>
      <nav>
      <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
      </nav>
   <% end %>

  </div>

    <div class= "col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class='table' >
    <tr>
    <td>
      <%= link_to user_path(@book.user_id) do %>
        <%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %>
         <nav>
           <%= @book.user.name %>
         </nav>
       <% end %>
    </td>



    <td><%= link_to @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user_id == current_user.id %>
    <td><%= link_to"Edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
    <td><%= link_to "Destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "削除しますか？"} %></td>
    <% end %>
    </tr>
    </table>
  </div>
</div>
