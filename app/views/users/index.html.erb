<!--Userã®Index-->
<div class="container px-5 px-sm-0">

 <div class="row">
 <div class="col-md-3">
   <h2>User info</h2>
   <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" ,format: 'no_image.jpg' %>

   <table class="table">
   <tr>
    <th>name</th>
    <th><%= @user.name %></th>
   </tr>

   <tr>
    <th>introduction</th>
    <th><%= @user.introduction %></th>
   </tr>

   </table>

   <div class="row">
   <%= link_to"",edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog"%>
   </div>


   <%= form_with model:@book, url: books_path do |f| %>
    <h2 class="mt-3">New book</h2>
    <h4>Title</h4>
    <%= f.text_field :title,class: "col-xs-12" %>

    <h4>Opinion</h4>
     <%= f.text_field :body,class: "col-xs-12" %>
    <nav>
    <%= f.submit 'Create Book',class: "col-xs-12 btn btn-primary" %>
    </nav>
    <% end %>

  </div>

  <div class= "col-md-8 offset-md-1">
    <h2>Users</h2>
    <table class=table "table-hover table-inverse">


      <thead>
      <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
      </tr>
      </thead>

    <% @users.each do |user| %>
    <tr>
    <th><%= attachment_image_tag user, :profile_image, :fill, 20, 20, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %></th>
   <th><%= user.name %><th>
   <th><%= link_to"Show",user_path(user.id) %></th>
   </tr>
   <% end %>
   </table>
  </div>

  </div>
